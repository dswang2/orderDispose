<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:layout_marginBottom="5px"
    android:layout_marginTop="5px"
    android:background="#55015E89"
    android:orientation="horizontal"
    android:paddingBottom="4px"
    android:paddingTop="4px"
    android:visibility="visible">


    <TextView
        android:id="@+id/rvitem_tv_createdate"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="2016-23-16 10:23:06"
        android:textSize="20px" />


    <LinearLayout
        android:layout_width="330px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16px"
        android:paddingRight="16px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textSize="20px" />

            <TextView
                android:id="@+id/rvitem_tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EP-143591863"
                android:textSize="20px" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量："
                android:textSize="20px" />

            <TextView
                android:id="@+id/rvitem_tv_ordersNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 5 "
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 份"
                android:textSize="20px" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="255px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房间："
                android:textSize="20px" />

            <TextView
                android:id="@+id/rvitem_tv_roomId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="101"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textSize="20px" />
            <TextView
                android:id="@+id/rvitem_tv_totalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="68"
                android:textSize="20px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元"
                android:textSize="20px" />
        </LinearLayout>


    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#22000000" />-->
</LinearLayout>